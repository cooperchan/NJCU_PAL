<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/CoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="njcu.pal.CounselorQuestions">


    <TextView
        android:id="@+id/counselor_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/counselor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:onClick="onCheckboxClicked"
        android:text="Strongly\nDisagree"
        android:textSize="10sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="207dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp" />

    <CheckBox
        android:id="@+id/counselor_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disagree"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/counselor_1"
        app:layout_constraintLeft_toRightOf="@+id/counselor_1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp" />

    <CheckBox
        android:id="@+id/counselor_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheckboxClicked"
        android:text="Not Sure"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/counselor_4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toTopOf="@+id/counselor_2" />

    <CheckBox
        android:id="@+id/counselor_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"
        app:layout_constraintRight_toLeftOf="@+id/counselor_5"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/counselor_3"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="16dp" />

    <CheckBox
        android:id="@+id/counselor_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strongly\nAgree"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="11dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/counselor_4"
        android:layout_marginRight="11dp"  />

    <Button
        android:id="@+id/counselor_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/counselor_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.543" />

</android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>
