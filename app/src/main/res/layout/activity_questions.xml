<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="njcu.pal.QuestionsActivity">

    <Button
        android:id="@+id/questions_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="155dp"
        android:text="submit" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/questions_submit"
        android:layout_alignStart="@+id/questions_submit"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="14dp"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/cb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/questions_submit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:maxLines="2"
        android:text="Strongly Disagree"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked"/>

    <CheckBox
        android:id="@+id/cb_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disagree"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/cb_1"
        android:layout_alignBottom="@+id/cb_1"
        android:layout_toEndOf="@+id/cb_1"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:id="@+id/cb_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Sure"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/cb_2"
        android:layout_alignBottom="@+id/cb_2"
        android:layout_alignStart="@+id/tv_question"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:id="@+id/cb_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_5"
        android:layout_alignBottom="@+id/cb_5"
        android:layout_toEndOf="@+id/cb_3"
        android:text="Agree"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked" />

    <CheckBox
        android:id="@+id/cb_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_3"
        android:layout_alignBottom="@+id/cb_3"
        android:layout_alignParentEnd="true"
        android:text="Strongly Agree"
        android:textSize="10sp"
        android:onClick="onCheckboxClicked" />
</RelativeLayout>
